        <StackPanel Grid.Column="2" Grid.RowSpan="4">
            <StackPanel>
                <Border Height="58"></Border>
                <Ellipse Panel.ZIndex="1" Width="130" Height="130" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="christina-wocintechchat-com-4yTHVRarfGY-unsplash.jpg" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
                <Border CornerRadius="20" Width="332" Height="217" Background="White" Margin="15,-57,15,0">
