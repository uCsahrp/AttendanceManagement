        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="38,0,14,0" Height="488" Width="764">
            <TextBlock FontSize="24" Foreground="Black" FontFamily="Trajan Pro" Height="36" Margin="0,13,0,0">Attendance</TextBlock>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="combo_class"  Width="160" Style="{DynamicResource MaterialDesignComboBox}" Foreground="#007bff" BorderBrush="#007bff" BorderThickness="2" Height="28" Grid.Column="1" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="19,0,0,0">
                    <ComboBoxItem  Content="All"/>
                    <ComboBoxItem  Content="c#"/>
                    <ComboBoxItem  Content="JEE"/>
                    <ComboBoxItem  Content="FEBE"/>
                    <ComboBoxItem  Content="classe1"/>
                    <ComboBoxItem  Content="classe2"/>
                    <ComboBoxItem  Content="classe3"/>
                    <ComboBoxItem  Content="classe4"/>
                </ComboBox>
                <Button Content="Affiché les absences"  Width="180" Click="Button_Click" Foreground="White" Grid.Column="1" Grid.Row="1" Margin="19,0,0,0" Background="#FF605BFF"/>

            </StackPanel>


            <Border Padding="10"></Border>
            <DataGrid CanUserAddRows="False" ColumnWidth="110" AutoGenerateColumns="False"  x:Name="dg" Background="White" BorderBrush="Black" Foreground="Black"  Height="404" Margin="6,0,32,0"   >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding [Student Id]}" Visibility="Hidden"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding [Full Name]}" />
                    <DataGridTextColumn Header="Date" Binding="{Binding [Date]}"  />
                    <DataGridTextColumn Header="Description"  Binding="{Binding [Description]}" />

                    <DataGridTextColumn Header="Class Name"  Binding="{Binding [Class Name]}" />
                    <DataGridTemplateColumn  Header="IsJustified">
                        <DataGridTemplateColumn.CellTemplate  >
                            <DataTemplate  >
                                <CheckBox   Content="" HorizontalAlignment="Left"   VerticalAlignment="Top" Checked="IsVerified_Checked"  Unchecked=" IsVerified_Unchecked" BorderBrush="#FF767676"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="125" x:Name="action" Header="Action">

                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate >
                                <Button x:Name="Send" Content="Send" Width="80" Background="#FF2196F3" BorderBrush="{x:Null}" Click="Button_Click_2" Foreground="White" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>


        <TextBox  x:Name="desc"  HorizontalAlignment="Left" Height="30" Margin="63,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="270" Grid.Column="1"/>
